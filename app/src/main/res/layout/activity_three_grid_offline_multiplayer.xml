<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeGridOfflineMultiplayer"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:id="@+id/playeronelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/custom_current_player"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.5"
            android:padding="5dp">

            <TextView
                android:id="@+id/playeronename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Player One"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/cross"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/playertwolayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/custom_add_player"
            android:layout_marginStart="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/playertwoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="cursive"
                android:text="Player Two"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/circle"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:background="@drawable/grid_border"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/slot1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

            <ImageView
                android:id="@+id/slot2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space" />

            <ImageView
                android:id="@+id/slot3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/slot4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

            <ImageView
                android:id="@+id/slot5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

            <ImageView
                android:id="@+id/slot6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/slot7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

            <ImageView
                android:id="@+id/slot8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

            <ImageView
                android:id="@+id/slot9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2.5dp"
                android:padding="15dp"
                android:background="@drawable/custom_player_space"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>